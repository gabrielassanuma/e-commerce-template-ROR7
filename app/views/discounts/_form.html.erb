<%= simple_form_for @discount do |f|%>
  <%= f.input :name,
              label: 'Enter discount name:',
              placeholder: 'Discount name',
              autofocus: true,
              input_html: { class: 'form-control form-control-lg my-4' }  %>
  <%= f.input :discount,
              label: 'Enter the discount to be applied:',
              placeholder: 'Discount to be applied in %',
              autofocus: true,
              input_html: { class: 'form-control form-control-lg my-4' }  %>
  <%= f.button :submit, "Submit", class: 'btn btn-outline-primary my-1' %>
  <%= link_to 'Back', categories_path, class: "btn btn-outline-primary my-1" %>
<% end %>