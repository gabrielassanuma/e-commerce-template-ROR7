<div class="col mb-5">
  <%= link_to product_path(product), class: "text-decoration-none"  do %>
    <div class="card h-100">
        <!-- Sale badge-->
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem"><%= "#{((1 - product.discount.discount) * 100).round}% off" %></div>
        <!-- Product image-->
        <% product.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "card-img-top"  %>
        <% end %>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder text-black"><%= product.name %></h5>
                <!-- Product reviews-->
                <div class="d-flex justify-content-center small text-warning mb-2">
                    <div class="bi-star-fill"></div>
                    <div class="bi-star-fill"></div>
                    <div class="bi-star-fill"></div>
                    <div class="bi-star-fill"></div>
                    <div class="bi-star-fill"></div>
                </div>
                <!-- Product price-->
                <span class="text-muted text-decoration-line-through text-black"><%=number_to_currency(product.price) %></span>
                <%= number_to_currency(product.price * product.discount.discount) %>
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
        </div>
    </div>
  <% end %>
</div>