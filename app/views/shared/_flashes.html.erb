<div class="flash-messages">
  <% if notice %>
    <div class="alert alert-info alert-dismissible fade show m-1" role="alert" style="position: fixed; bottom: 16px; rigth: 16px; z-index: 1000;">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-warning alert-dismissible fade show m-1" role="alert" style="position: fixed; bottom: 16px; rigth: 16px; z-index: 1000;">
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
