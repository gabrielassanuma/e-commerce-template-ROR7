<%= simple_form_for @category do |f|%>
  <%= f.input :name,
              label: 'Enter category name:',
              placeholder: 'Category name',
              autofocus: true,
              input_html: { class: 'form-control form-control-lg my-4' }  %>
  <%= f.button :submit, "Submit", class: 'btn btn-outline-primary my-1' %>
  <%= link_to 'Back', categories_path, class: "btn btn-outline-primary my-1" %>
<% end %>
